<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/productItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_touch">
        <ImageView
            android:id="@+id/productThumb"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_err"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/productName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/productThumb"
            app:layout_constraintStart_toStartOf="@id/productThumb"
            app:layout_constraintEnd_toEndOf="@id/productThumb"
            android:layout_marginHorizontal="16dp"
            android:lines="2"
            android:text="@string/app_name"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/productName"
            app:layout_constraintStart_toStartOf="@id/productThumb"
            app:layout_constraintEnd_toEndOf="@id/productThumb"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="179.000"/>
        <TextView
            android:id="@+id/priceFake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintStart_toStartOf="@id/productThumb"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/transparent_white"
            android:foreground="@drawable/text_strike_through"
            android:textSize="16sp"
            android:text="179.000"
            tools:targetApi="m" />

        <ImageButton
            android:id="@+id/add_to_cart_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/productName"
            app:layout_constraintEnd_toEndOf="@id/productName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_cart_btn"
            android:src="@drawable/ic_add_to_cart"
            app:layout_constraintTop_toBottomOf="@id/priceFake"
            tools:targetApi="m" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>